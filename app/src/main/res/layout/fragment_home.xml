<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Welcome -->
        <TextView
            android:id="@+id/textGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to SmartExpenseTrackerApp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <!-- WALLET HEADER -->
        <TextView
            android:id="@+id/textWalletTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textGreeting"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- TOTAL BALANCE -->
        <TextView
            android:id="@+id/textTotalBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingVertical="8dp"/>

        <!-- LIST OF ACCOUNTS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAccounts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- ADD ACCOUNT BUTTON -->
        <Button
            android:id="@+id/buttonAddAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add Account"
            app:layout_constraintTop_toBottomOf="@id/textWalletTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <!-- TRANSACTIONS HEADER -->
        <TextView
            android:id="@+id/transactionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Transactions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="24dp"/>

        <!-- LIST OF LAST 3 TRANSACTIONS -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <!-- SEE MORE -->
        <TextView
            android:id="@+id/textSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See more"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:paddingTop="12dp"/>

    </LinearLayout>

</ScrollView>
